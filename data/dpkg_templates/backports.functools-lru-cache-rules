#!/usr/bin/make -f

%:
	dh $@ --buildsystem=pybuild --with=python2

.PHONY: override_dh_auto_clean
override_dh_auto_clean:
	dh_auto_clean
	rm -rf build backports.functools_lru_cache*.egg-info/SOURCES.txt backports.functools_lru_cache*.egg-info/PKG-INFO

.PHONY: override_dh_auto_install
override_dh_auto_install:
	dh_auto_install --destdir $(CURDIR)

.PHONY: override_dh_python2
override_dh_python2:
	dh_python2 --namespace backports
